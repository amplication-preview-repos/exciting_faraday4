datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Meme {
  id          String         @id @default(cuid())
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt
  url         String?
  description String?
  tags        EnumMemeTags[]
  name        String?
  user        User?          @relation(fields: [userId], references: [id])
  userId      String?
  discussions Discussion[]
}

model Tag {
  id        String         @id @default(cuid())
  createdAt DateTime       @default(now())
  updatedAt DateTime       @updatedAt
  name      String?
  memes     EnumTagMemes[]
}

model Discussion {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  content   String?
  user      User?    @relation(fields: [userId], references: [id])
  userId    String?
  meme      Meme?    @relation(fields: [memeId], references: [id])
  memeId    String?
}

model User {
  id          String       @id @default(cuid())
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  firstName   String?
  lastName    String?
  username    String       @unique
  email       String?      @unique
  password    String
  roles       Json
  memes       Meme[]
  discussions Discussion[]
}

enum EnumMemeTags {
  Option1
}

enum EnumTagMemes {
  Option1
}
